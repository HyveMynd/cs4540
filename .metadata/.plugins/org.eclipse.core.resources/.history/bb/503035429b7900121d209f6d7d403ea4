<?php
require 'hidden/dbpassword.php';

// Opens and returns a DB connection
function openDBConnection () {
	global $dbpassword;
	$DBH = new PDO("mysql:host=atr.eng.utah.edu;dbname=ps4_monroy",
			'monroy_sw', $dbpassword);
	$DBH->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
	return $DBH;
}

function storeResume ($resumeName, $name, $phone, $addr, $position, $startdate, $enddate, $desc){
	$DBH = openDBConnection();
	$DBH->beginTransaction();
	
	try{
		//get id
		$id = getResumeID($DBH, $resumeName);
		
		//store contact info
		storeContactInfo($DBH, $id, $name, $phone, $addr);
		
		//store position indo
		storePositionSought($DBH, $id, $position);
		
		//store employment history
		storeEmploymentHistory($DBH, $id, $startdate, $enddate, $desc);
		
		$DBH->commit();
		return true;
	}
	catch (PDOException $e){
		echo "<script type='text/javascript'>alert('PDOException')</script>";
		return false;
	}
	
	
}

function getResumeID ($DBH, $resumeName){
	//get the ResumeID
	$stmt = $DBH->prepare("select * from ps4_monroy.resumenames where resumename=?");
	$stmt->bindValue(1, $resumeName);
	$stmt->execute();
	
	//create resume if not in database
	if ($stmt->rowCount() <= 0){
		$query2 = $DBH->prepare("insert into ResumeNames (ResumeName) values (?)");
		$query2->bindValue(1, $resumeName);
		$query2->execute();
		$stmt->execute();
	}
	
	$row = $stmt->fetch();
	$_SESSION[$resumeName] = $row['ResumeName'];
	return $row['ResumeID'];
}

function storeContactInfo ($DBH, $id, $name, $phone, $addr){
	$stmt = $DBH->prepare("insert into ContactInfo (ID, Phone, Address, Name) values (?,?,?,?)");
	$stmt->bindValue(1, $id);
	$stmt->bindValue(2, $phone);
	$stmt->bindValue(3, $addr);
	$stmt->bindValue(4, $name);
	$stmt->execute();
}

function storePositionSought ($DBH, $id, $position){
	$stmt = $DBH->prepare("insert into PositionSought (ID, JobDesc) values (?,?)");
	$stmt->bindValue(1, $id);
	$stmt->bindValue(2, $position);
}

function storeEmploymentHistory ($DBH, $id, $startdate, $enddate, $desc){
	$stmt = $DBH->prepare("insert into EmploymentHistory (ID, StartDate, EndDate, Description) values (?,?,?,?)");
	$stmt->bindValue(1, $id);
	$stmt->bindValue(2, $startdate);
	$stmt->bindValue(3, $enddate);
	$stmt->bindValue(4, $desc);
	$stmt->execute();
}
?>